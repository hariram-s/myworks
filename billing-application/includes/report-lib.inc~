<?php
/**
 * user interface functions used in report management system
 */

require_once 'Savant3.php';



/**
 * Functions for displaying reportitem_form.
 */
function report_form($date,$report ='') {
  $report_item_form ="";
	$report_item_form .= '<form method="POST" action="#" >';
	$report_item_form .= '<div class="date input">';
	$report_item_form .= '<label for="start">Enter the start-date:</label>';
	$report_item_form .= '    <input name="start" value=\'' . $date . '\'type="text" />';
	$report_item_form .= '</div>';
	$report_item_form .= '<div class="date input">';
	$report_item_form .= '<label for="end">Enter the end-date:</label>';
	$report_item_form .= '    <input name="end" value=\'' . $date . '\'type="text" />';
	$report_item_form .= '</div>';
	$report_item_form .= '<div>';
	if ($report == 1) {
	$report_item_form .= '<input name="report" type="radio" value="1" />';
	}
	if ($report == 2) {
	$report_item_form .= '<input name="report" type="radio" value="2" />';
	}
	$report_item_form .= '</div>';
  $report_item_form .= '</form>';
	return  $report_item_form;
}

/**
 * Functions for creating the report in the given range by item.
 */
function report_submit($start, $end) {
  return report_item($start, $end);
} 

/**
 * Functions for creating the report in the given range by item.
 */
function report_item($start, $end) {
  $db = db_get_connection(); 
  $stmt = $db->query("SELECT code, "
    . " name, "
    . " sum(quantity) "
    . " AS items_sold, "
    . " sum(quantity*selling_price) "
    . " AS Total  "
    . " FROM bill_items "
    . " JOIN bills " 
    . " ON bills.id=bill_items.bill_id "
    . " WHERE date >= $start "
    . " AND date <= $end "
    . " GROUP BY code; "
  );
  $items = array();
  while($row = $stmt->fetch(PDO::FETCH_ASSOC)) {
    $items[] = array ('item-name'=> $row['name'],
      'item-quantity' => $row['items_sold'],
      'item-total' => $row['Total']
    );
  }
  return $items;
}
  


 
/**
 * Functions for creating the report in the given range by item.
 */
function report_customer($start, $end) {
  $customers = array();
  $db = db_get_connection();
  $stmt = $db->query("SELECT customers.name, "
    . " SUM(bill_items.quantity * bill_items.selling_price) "
    . " AS gross,bill_items.selling_price "
    . " FROM customers " 
    . " JOIN bills "
    . " ON customers.id =bills.customer_id "
    . " JOIN bill_items "
    . " ON bills.id=bill_items.bill_id "
    . " WHERE bills.date >= $start "
    . " AND bills.date <= $end "
    . " GROUP BY name"
  );
  while ($row = $stmt->fetch(PDO::FETCH_ASSOC)) {
    $customers[] = array ('customer-name' => $row['name'],
      'customer-total' =>  $row['gross']
    );
  }  
  return $customers;  
}


?>

