<?php
require_once 'bootstrap.php';
require_once 'includes/common.inc';
require_once 'includes/user-management-lib.inc';
if (is_logged_in() == FALSE) {
  $login = new Savant3();
  $login->title = 'Login';
  $login->inputs = login_form();  
  $login->display('templates/content.tpl.php');
  if (isset($_POST['login'])) {
    if (login_submit($_POST['username'],$_POST['password'],$_POST['remember'])) {
        redirect($_GET['destination']);
    }
    else {
      echo "Username and password doesnt matches";
    }
  }
}
else {
  redirect ("login.php?destination=$previous");
}
include 'footer.php';
?>

